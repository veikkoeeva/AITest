{
  "openapi": "3.1.1",
  "info": {
    "title": "AI Test Server",
    "description": "Friendly endpoints to test AI-powered interactions",
    "contact": {
      "name": "Test",
      "email": "support@test.org"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7211",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/ai": {
      "get": {
        "tags": [
          "Greetings"
        ],
        "summary": "Get a personalized greeting",
        "description": "This endpoint returns a personalized greeting based on the provided name.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/chat/azure": {
      "post": {
        "tags": [
          "Chat"
        ],
        "summary": "Chat with Azure-hosted model.",
        "description": "Returns a personalized AI-generated response from the Azure-hosted model.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessage"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/chat/local": {
      "post": {
        "tags": [
          "Chat"
        ],
        "summary": "Chat with local model.",
        "description": "Returns a personalized AI-generated response from the local model (e.g., ONNX).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessage"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/chat/responses": {
      "get": {
        "tags": [
          "Chat"
        ],
        "summary": "A chat message response.",
        "description": "Streams a response token by token using Server-Sent Events.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Greetings"
    },
    {
      "name": "Chat"
    }
  ]
}